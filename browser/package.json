{
  "name": "mattermost-loadtest-browser",
  "type": "module",
  "private": true,
  "workspaces": [
    "src/lib"
  ],
  "engines": {
    "node": ">=24",
    "npm": ">=10"
  },
  "devDependencies": {
    "@types/ms": "2.1.0",
    "@types/node": "^25.0.8",
    "@types/supertest": "6.0.3",
    "@vitest/ui": "^4.0.17",
    "fastify-cli": "7.4.1",
    "prettier": "^3.8.0",
    "supertest": "^7.2.2",
    "tslib": "2.8.1",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@fastify/swagger": "9.6.1",
    "@mattermost/loadtest-browser-lib": "*",
    "@playwright/test": "^1.57.0",
    "fastify": "5.6.2",
    "ms": "2.1.3",
    "pino": "^10.2.0",
    "pino-caller": "4.0.0",
    "pino-pretty": "^13.1.3",
    "playwright": "1.57.0",
    "zod": "^4.3.5"
  },
  "scripts": {
    "lint:check": "prettier --check 'src/**/*.ts'",
    "lint:fix": "prettier --write 'src/**/*.ts'",
    "types:check": "tsc --noEmit",
    "e2etest:run": "NODE_OPTIONS='--import=tsx/esm' playwright test",
    "e2etest:ui": "NODE_OPTIONS='--import=tsx/esm' playwright test --ui",
    "e2etest:debug": "NODE_OPTIONS='--import=tsx/esm' playwright test --debug",
    "unittest:run": "vitest run",
    "unittest:ui": "vitest --ui",
    "unittest:watch": "vitest"
  }
