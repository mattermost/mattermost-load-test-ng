{
  "ClusterConfig": {
    "Agents": [
      {
        "Id": "lt0",
        "ApiURL": "http://localhost:4000"
      }
    ],
    "MaxActiveUsers": 2000
  },
  "MonitorConfig": {
    "PrometheusURL": "http://localhost:9090",
    "UpdateIntervalMs": 2000,
    "Queries": [
      {
        "Description": "Average request duration",
        "Query": "rate(mattermost_http_request_duration_seconds_sum[1m])/rate(mattermost_http_request_duration_seconds_count[1m])",
        "Threshold": 0.1,
        "Alert": true
      },
      {
        "Description": "Average request duration",
        "Query": "rate(mattermost_api_time_sum[1m])/rate(mattermost_api_time_count[1m])",
        "Threshold": 0.1,
        "Alert": true
      },
      {
        "Description": "Rate of HTTP 5xx client errors",
        "Query": "sum(rate(loadtest_http_errors_total{status_code=~\"5..\"}[1m]))",
        "Threshold": 0.01,
        "Alert": true
      },
      {
        "Description": "Rate of client timeouts",
        "Query": "sum(rate(loadtest_http_timeouts_total[1m]))",
        "Threshold": 0.01,
        "Alert": true
      }
    ]
  },
  "NumUsersInc": 16,
  "NumUsersDec": 16,
  "RestTimeSec": 10,
  "LogSettings": {
    "EnableConsole": true,
    "ConsoleLevel": "ERROR",
    "ConsoleJson": false,
    "EnableFile": true,
    "FileLevel": "INFO",
    "FileJson": true,
    "FileLocation": "ltcoordinator.log"
  }
}
